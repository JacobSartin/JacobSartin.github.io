{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open Dev in Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/app",
      "preLaunchTask": "Start",
      "userDataDir": "${workspaceFolder}/.vscode/chrome",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
